<!DOCTYPE html>
<html>
  <head>
    <title>BlogRor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <link data-require="bootstrap@*" data-semver="4.1.3" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <script data-require="bootstrap@*" data-semver="4.1.3" src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <% if user_signed_in? %>
       Hello <%= current_user.username %> | <%= link_to 'Sing Out', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Sing In', new_user_session_path %>
       <% end %>
    





      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

    </div>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="col-8">

      <%= yield %>
    </div>
  </div>

  </body>
</html>
