<h2><%= @row.title %></h2>
<p><%= @row.text %></p>
<p><%= @row.created_at %></p>

<h5>Add comment</h5>

<%= form_for([@row, @comment]) do |f| %>
  <p>
    <%= f.label :author %> <br/>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :body %> <br/>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>


<!------------------------------------------------------>

<%= link_to "Show all articles", articles_path %>
<hr />

<% @comments.each do |comment| %>
  <h2><%= comment.author %></h2>
  <p><%= comment.body %></p>
  <p><%= comment.created_at %></p>
  <hr />
<% end %>