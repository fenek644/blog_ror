<h2> New Article</h2>

<% if @article && @article.errors.any? %>
  <p id="err">
    <% @article.errors.full_messages.each do |msg| %>
      <span><%= msg %></span><br />
    <% end %>

  </p>
<% end %>

<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %> <br/>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>